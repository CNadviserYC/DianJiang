<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="房间"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:text="等待中..."
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/playerListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusText"
        android:text="玩家列表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/playerListTitle"
        android:layout_above="@id/controlPanel"
        android:background="#F5F5F5"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/exitButton"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 国战模式控件 -->
        <EditText
            android:id="@+id/countInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入抽取个数"
            android:inputType="number"
            android:textSize="16sp"
            android:visibility="gone"/>

        <!-- 新增：军争模式控件 -->
        <LinearLayout
            android:id="@+id/roleInputPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#FFF9C4"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="军争模式 - 身份牌分配(总数需等于玩家数)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="主公:"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                
                <EditText
                    android:id="@+id/zhugongInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="主公个数"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:imeOptions="flagNoExtractUi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="反贼:"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                
                <EditText
                    android:id="@+id/fanzeiInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="反贼个数"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:imeOptions="flagNoExtractUi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="内奸:"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                
                <EditText
                    android:id="@+id/neijianInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="内奸个数"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:imeOptions="flagNoExtractUi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="忠臣:"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                
                <EditText
                    android:id="@+id/zhongchenInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="忠臣个数"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:imeOptions="flagNoExtractUi"/>
            </LinearLayout>

            <!-- 军争模式抽取牌数 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="武将牌抽取设置"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/junzhengCountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入每人抽取武将牌个数"
                android:inputType="number"
                android:textSize="14sp"
                android:background="@android:color/white"
                android:padding="8dp"
                android:imeOptions="flagNoExtractUi"/>

        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始抽取"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出房间"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#F44336"/>

</RelativeLayout>
